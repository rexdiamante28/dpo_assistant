<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>



    <template id="homepage" name="Home Page">
        <t t-call="website.layout">
            <span class="hidden" id="active_link">0,1</span>
          
            <div class="row">
              <div  id='dpo_main_content' class="col-xs-12">
                  <div class="col-sm-6" id='sssss'>
                      <h1 class="lightbluetext bannertext">PROTECT.</h1>
                      <h1 class="bluetext bannertext">PREVENT.</h1>
                      <h1 class="lightbluetext bannertext">COMPLY.</h1>

                      <h3 id="tagline">
                        YOUR SECURITY AND DATA <BR/> 
                        PRIVACY SERVICE PROVIDER
                      </h3>
                  </div>
                  <div class="col-sm-6">
                      <div id='transparent_panel'>
                          <h3 class="bluetext text-center">SUBSCRIBE NOW!</h3>
                          <form method="post" action="/page/subscribe">
                              <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                              <div class="form-group">
                                  <input type="text" class="form-control" name="name" placeholder="Name:" />
                              </div>
                              <div class="form-group">
                                  <input type="text" class="form-control" name="email" placeholder="Email:" />
                              </div>
                              <div class="form-group">
                                  <input type="text" class="form-control" name="company" placeholder="Company:" />
                              </div>
                              <div class="form-group">
                                  <input type="text" class="form-control" name="contact_number" placeholder="Contact Number:" />
                              </div>
                              <div class="form-group">
                                  <textarea type="text" class="form-control" name="message" placeholder="Message:"></textarea>
                              </div>
                              <div class="form-group">
                                  <button type="submit" class="btn btn-block btn-primary">SUBSCRIBE</button>
                              </div>
                          </form>
                      </div>
                  </div>
              </div>                                    
            </div>
        </t>
    </template>


    <template id="aboutus" name="About Us">
        <t t-call="website.layout">
            <span class="hidden" id="active_link">0,1</span>         
            <div class="white_panel" id="about_us">
                 
              <hr/>                                    
            </div>
        </t>
    </template>


    <template id="thankyou" name="Thank You">
        <t t-call="website.layout">
            <span class="hidden" id="active_link">0,1</span>
          
            <div class="white_panel" id="homepage">
              <div  id='dpo_main_content' class="col-xs-12">
                  <div class="col-xs-12" id='sssss'>
                      <h1 class="lightbluetext bannertext text-center">THANK YOU FOR SUBSCRIBING!</h1>
                      <h3 id="tagline" class="text-center">
                          We'll get in touch with you the soonest.
                      </h3>
                  </div>
              </div>                                    
            </div>
        </t>
    </template>



    <template id="services" name="Services">
        <t t-call="website.layout">
            <span class="hidden" id="active_link">0,1</span>
          
            <div class="white_panel" id="about_us">
              <h1 class="title">Services</h1><br/>                              
              <hr/>                                    
            </div>
        </t>
    </template>


    <template id="contactus" name="Contact Us">
        <t t-call="website.layout">
            <span class="hidden" id="active_link">0,1</span>
          
            <div class="white_panel" id="contactus">
              <h1 class="title">Contact Us</h1><br/>                              

              <p> <b> This is A Paragraph Contact Us </b> </p>

              <hr/>                                    
            </div>
        </t>
    </template>


</data>
</odoo>  
